<!DOCTYPE html>
<html lang="en">
<head>
    <title>Portfolyo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Creative Resume Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- bootstrap-css -->
    <link href="/web/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <!--// bootstrap-css -->
    <!-- css -->
    <link rel="stylesheet" href="/web/css/style.css" type="text/css" media="all" />
    <!--// css -->
    <link rel="stylesheet" href="/web/css/owl.carousel.css" type="text/css" media="all">
    <link href="/web/css/owl.theme.css" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="/web/css/cm-overlay.css" />
    <!-- font-awesome icons -->
    <link href="/web/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <!-- font -->
    <link href="//fonts.googleapis.com/css?family=Roboto+Slab:100,300,400,700" rel="stylesheet">
    <link href='//fonts.googleapis.com/css?family=Roboto+Condensed:400,700italic,700,400italic,300italic,300' rel='stylesheet' type='text/css'>
    <!-- //font -->
    <script src="/web/js/jquery-1.11.1.min.js"></script>
    <script src="/web/js/bootstrap.js"></script>
    <!-- menu -->
    <link rel="stylesheet" href="/web/css/main.css">
    <script type="text/javascript" src="/web/js/main.js"></script>
    <!-- //menu -->
    <script>
        $(document).ready(function () {
            $("#owl-demo").owlCarousel({

                autoPlay: 3000, //Set AutoPlay to 3 seconds
                autoPlay: true,
                items: 3,
                itemsDesktop: [640, 5],
                itemsDesktopSmall: [414, 4]

            });

        });
    </script>
</head>
<body>
    <!-- banner -->
    <div class="banner" id="home">
        <!-- menu -->
        <div id="toggle_m_nav">
            <div id="m_nav_menu" class="m_nav">
                <div class="m_nav_ham" id="m_ham_1"></div>
                <div class="m_nav_ham" id="m_ham_2"></div>
                <div class="m_nav_ham" id="m_ham_3"></div>
            </div>
        </div>

        <div id="m_nav_container" class="m_nav">
            <ul id="m_nav_list" class="m_nav">
                <li class="m_nav_item" id="m_nav_item_1"> <a href="#home">Ana Sayfa</a> </li>
                <li class="m_nav_item" id="moble_nav_item_2"> <a href="#about">Hakkımda</a> </li>
                <li class="m_nav_item" id="moble_nav_item_4"> <a href="#experience">Deneyim & Eğitim</a> </li>
                <li class="m_nav_item" id="moble_nav_item_5"> <a href="#projects">Projeler</a> </li>
                <li class="m_nav_item" id="moble_nav_item_6"> <a href="#contact">İletşim</a> </li>
            </ul>
        </div>
        <!-- menu -->
        <div class="container">
            <div class="agile-logo">
                <h1><a href="index.html">@Model.Resume.Name<span>@Model.Resume.Surname</span></a></h1>
            </div>
            <div class="w3l-banner-grids">
                <div class="col-md-8 w3ls-banner-right">
                    <div class="banner-right-img">
                        <img src="/images/@Model.Resume.Photo" alt="" />
                    </div>
                    <div class="banner-right-info">
                        <h2>@Model.Resume.Description1</h2>
                        <p>@Model.Resume.Description2</p>
                    </div>
                    <div class="clearfix"> </div>
                    <div class="w3-button">
                        <div class="w3-button-info m_nav_item">
                            <a class="hvr-sweep-to-bottom" href="#contact">İletİşİme Geç</a>
                        </div>
                    </div>
                    <div class="social-grids">
                        <div class="social-info">
                            <h4>Takİp Et : </h4>
                        </div>
                        <div class="agileinfo-social-grids">
                            <ul>
                                <li><a href="@Model.Resume.LinkedinLink" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                                <li><a href="@Model.Resume.GithubLink" target="_blank"><i class="fa fa-github"></i></a></li>
                                <li><a href="@Model.Resume.InstagramLink" target="_blank"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="col-md-4 w3ls-banner-left">
                    <div class="w3ls-banner-left-info">
                        <h4>Ünvan</h4>
                        <p>@Model.Resume.Title</p>
                    </div>
                    <div class="w3ls-banner-left-info">
                        <h4>İSİM</h4>
                        <p>@Model.Resume.Name @Model.Resume.Surname</p>
                    </div>
                    <div class="w3ls-banner-left-info">
                        <h4>CİNSİYET</h4>
                        <p>@Model.Resume.Sex</p>
                    </div>
                    <div class="w3ls-banner-left-info">
                        <h4>Adres</h4>
                        <p>@Model.Resume.Address</p>
                    </div>
                    <div class="w3ls-banner-left-info">
                        <h4>Email </h4>
                        <p><a href="mailto:example@email.com">@Model.Resume.Email</a></p>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!-- //banner -->
    <!-- about -->
    <div class="about" id="about">
        <div class="container">
            <div class="wthree-about-grids">
                <div class="col-md-6 wthree-about-left">
                    <h3>Hakkımda</h3>
                    <h4>@Model.Resume.AboutTitle</h4>
                    <p>@Model.Resume.AboutDescription</p>
                </div>
                <div class="col-md-6 wthree-about-right">
                    <h3>Yetenekler</h3>
                    <div class="skills-bar">
                        <section class='bar'>
                            <section class='wrap'>
                                <div class='wrap_right'>
                                    @foreach (var x in Model.Skills.Where(x => x.Status == true))
                                    {
                                        <div class='bar_group'>
                                            <div class='bar_group__bar thin' label='@x.SkillName' show_values='true' tooltip='true' value='@x.SkillScore'></div>
                                        </div>
                                    }
                                </div>
                                <div class='clear'></div>
                            </section>
                        </section>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!-- //about -->
    <!-- experience -->
    <div class="experience" id="experience">
        <div class="container">
            <div class="w3-agileits-statistics-heading experience-heading">
                <h3>Deneyİm & Eğİtİm</h3>
            </div>
            <div class="w3-agile-experience-grids">
                <div class="experience-top-grids">
                    @foreach (var x in Model.Experiences.Where(x => x.Status == true))
                    {
                        <div class="col-md-6 experience-grid">
                            <div class="experience-grid-icon icon-left hvr-radial-out">
                                <i class="fa fa-folder-open" aria-hidden="true"></i>
                            </div>
                            <div class="experience-grid-info">
                                <h5>@x.ExperienceName</h5>
                                <p>@x.ExperienceDescription</p>
                            </div>
                        </div>
                    }
                    @foreach (var x in Model.Educations.Where(x => x.Status == true))
                    {
                        <div class="col-md-6 experience-grid experience-grid1">
                            <div class="experience-grid-icon icon-left hvr-radial-out">
                                <i class="fa fa-bell" aria-hidden="true"></i>
                            </div>
                            <div class="experience-grid-info">
                                <h5>@x.EducationName</h5>
                                <p>@x.EducationDescription</p>
                            </div>
                        </div>
                    }
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //experience -->
    <!-- projects -->
    <div class="projects" id="projects">
        <div class="container">
            <div class="w3-agileits-statistics-heading experience-heading">
                <h3>Projelerİm</h3>
            </div>
        </div>
        <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
            <div id="myTabContent" class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="home-main" aria-labelledby="home-tab">
                    <div class="w3_tab_img">
                        @foreach (var x in Model.Projects.Where(x => x.Status == true))
                        {
                            <div class="col-md-3 w3_tab_img_left">
                                <div class="demo">
                                    <a href="@x.ProjectLink" target="_blank">
                                        <figure class="imghvr-shutter-in-out-diag-2">
                                            <img src="~/images/@x.ProjectPhoto" alt="@x.ProjectAnnotation" class="img-responsive" />
                                        </figure>
                                    </a>
                                </div>
                            </div>
                        }
                        <div class="clearfix"> </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="/web/js/jquery.tools.min.js"></script>
        <script src="/web/js/jquery.mobile.custom.min.js"></script>
        <script src="/web/js/jquery.cm-overlay.js"></script>
        <script>
            $(document).ready(function () {
                $('.cm-overlay').cmOverlay();
            });
        </script>

    </div>
    <!-- //projects -->
    <!-- contact -->
    <div class="contact" id="contact">
        <div class="container">
            <div class="w3-agileits-statistics-heading experience-heading">
                <h3>İletİşİme Geç</h3>
            </div>
            <div class="contact-form">
                <form asp-controller="Default" asp-action="Contact" method="post">
                    <div class="fields-grid">
                        <div class="styled-input agile-styled-input-top">
                            <input type="text" name="NameSurname" required="">
                            <label>İsim Soyisim</label>
                            <span></span>
                        </div>
                        <div class="styled-input agile-styled-input-top">
                            <input type="text" name="Phone" required="">
                            <label>Telefon</label>
                            <span></span>
                        </div>
                        <div class="styled-input">
                            <input type="text" name="Email" required="">
                            <label>Email</label>
                            <span></span>
                        </div>
                        <div class="styled-input">
                            <input type="text" name="Subject" required="">
                            <label>Konu</label>
                            <span></span>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                    <div class="styled-input textarea-grid">
                        <textarea name="Message" required=""></textarea>
                        <label>Mesaj</label>
                        <span></span>
                    </div>
                    <input type="submit" value="GÖNDER">
                </form>
            </div>
        </div>
    </div>
    <!-- //contact -->
    <!-- copyright -->
    <div class="agileits-w3layouts-footer">
        <div class="container">
            <p><a>Yahya Eraltay @DateTime.Now.Year</a></p>
        </div>
    </div>
    <!-- //copyright -->
    <script src="/web/js/bars.js"></script>
    <script src="/web/js/owl.carousel.js"></script>
</body>
</html>
