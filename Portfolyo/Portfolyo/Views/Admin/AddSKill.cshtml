@model Portfolyo.Models.Skill
@{
    ViewData["Title"] = "AddSKill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yetenek Ekle</h2>
<br />
<form class="form-group" asp-controller="Admin" asp-action="AddSkill" method="post">
    <label>Yetenek İsmi</label>
    <br />
    <input class="form-control" asp-for="SkillName"/>
    <br />
    <label>Yetenek Puanı</label>
    <br />
    <input class="form-control" asp-for="SkillScore"/>
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>

