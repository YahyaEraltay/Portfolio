@model Portfolyo.Models.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Deneyim Ekle</h2>
<br />
<form class="form-check form-group" asp-controller="Admin" asp-action="AddExperience" method="post">
    <label>Deneyim Yeri</label>
    <br />
    <input class="form form-control" asp-for="ExperienceName" />
    <br />
    <label>Deneyim Açıklama</label>
    <br />
    <textarea class="form form-control" asp-for="ExperienceDescription"></textarea>
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>
